services:
  - type: web
    name: 6-12-18-24
    env: node
    plan: starter
    buildCommand: |
      npm install --no-audit --no-fund
      npm run build
    startCommand: npm run start
    envVars:
      - key: NODE_ENV
        value: production
      - key: TURSO_DATABASE_URL
        sync: false  # You'll need to set this in Render dashboard
      - key: TURSO_AUTH_TOKEN
        sync: false  # You'll need to set this in Render dashboard
    healthCheckPath: /
